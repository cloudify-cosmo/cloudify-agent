[Unit]
Description=Cloudify Agent Worker Service

[Service]
TimeoutStartSec=0
Restart=on-failure
EnvironmentFile={{ config_path }}
User={{ user }}
Group={{ user }}
ExecStart={{ virtualenv_path }}/bin/python -m cloudify_agent.worker \
    --queue "{{ queue }}" \
    --max-workers {{ max_workers }} \
    --log-file "{{ log_file }}" \
    --log-level {{ log_level }}


[Install]
WantedBy=multi-user.target
